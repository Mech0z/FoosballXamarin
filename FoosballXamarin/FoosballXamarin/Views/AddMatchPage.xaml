<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoosballXamarin.Views.AddMatchPage"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:FoosballXamarin.ViewModels;assembly=FoosballXamarin.UWP"
             d:DataContext="{d:DesignInstance {x:Type vm:AddMatchViewModel}}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Title="Add Match"
             mc:Ignorable="d">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ListView x:Name="Team1ListView"
                      Grid.Column="0"
                      Grid.Row="0"
                      HorizontalOptions="Center"
                      ItemsSource="{Binding Team1}"
                      IsRefreshing="{Binding IsBusy, Mode=OneWay}"

                      ItemTapped="PlayerClickedCommand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal">
                                <Label Text="{Binding Username}"
                                       LineBreakMode="NoWrap"
                                       HorizontalTextAlignment="Center"
                                       Style="{DynamicResource ListItemTextStyle}"
                                       FontSize="16" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label
                Grid.Column="1"
                Grid.Row="0"
                FontSize="18"
                HorizontalOptions="Center"
                VerticalTextAlignment="Center"
                Text="VS" />
            <ListView x:Name="Team2ListView"
                      Grid.Column="2"
                      Grid.Row="0"
                      HorizontalOptions="Center"
                      ItemsSource="{Binding Team2}"
                      IsRefreshing="{Binding IsBusy, Mode=OneWay}"

                      ItemTapped="PlayerClickedCommand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10" Orientation="Horizontal">
                                <Label Text="{Binding Username}"
                                       LineBreakMode="NoWrap"
                                       HorizontalTextAlignment="Center"
                                       Style="{DynamicResource ListItemTextStyle}"
                                       FontSize="16" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <Entry
                Grid.Row="2"
                Grid.Column="0"
                Keyboard="Numeric"
                FontSize="40"
                HorizontalTextAlignment="Center"
                Text="{Binding ScoreTeam1Match1}" />
            <Entry
                Grid.Row="2"
                Grid.Column="2"
                Keyboard="Numeric"
                FontSize="40"
                HorizontalTextAlignment="Center"
                Text="{Binding ScoreTeam2Match1}" />

            <Entry
                Grid.Column="0"
                Grid.Row="3"
                Keyboard="Numeric"
                FontSize="40"
                HorizontalTextAlignment="Center"
                Text="{Binding ScoreTeam1Match2}" />
            <Entry
                Grid.Column="2"
                Grid.Row="3"
                Keyboard="Numeric"
                FontSize="40"
                HorizontalTextAlignment="Center"
                Text="{Binding ScoreTeam2Match2}" />
            <Button
                Grid.Row="4"
                Grid.ColumnSpan="3"
                HorizontalOptions="Center"
                Scale="1.5"
                IsEnabled="{Binding IsNotSubmitting}"
                Clicked="SubmitCommand"
                Text="Submit" />
        </Grid>
    </ContentPage.Content>
</ContentPage>